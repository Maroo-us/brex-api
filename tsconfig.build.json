// This config is used for build only
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "types",
    "newLine": "lf",
    "outDir": "dist",
    "target": "ES2015",
    "stripInternal": true
  },
  // Skip `test` directory to prevent generating declaration files for tests
  "include": ["src/**/*"]
}
